{
  "name": "synq-extension",
  "displayName": "SynQ",
  "version": "0.0.1",
  "description": "The browser extension for the SynQ app.",
  "author": "SynQ, LLC",
  "scripts": {
    "dev": "plasmo dev",
    "build": "npx rimraf ./build ./.plasmo && plasmo build",
    "package": "plasmo package",
    "format:all": "prettier --write \"**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,json}\"",
    "lint:all": "eslint --fix \"**/*.{js,ts,json}\"",
    "lint:check": "eslint \"**/*.{js,ts,json}\""
  },
  "dependencies": {
    "@fortawesome/free-regular-svg-icons": "^6.4.0",
    "@fortawesome/free-solid-svg-icons": "^6.4.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/redux-persist": "^6.1.0",
    "@plasmohq/storage": "^1.7.2",
    "@reduxjs/toolkit": "^1.9.5",
    "@synq/eslint-config": "^1.0.16",
    "@synq/music-service-clients": "1.0.5",
    "@synq/prettier-config": "^1.0.6",
    "@synq/react-beautiful-dnd": "13.1.1",
    "@synq/ui": "0.0.4-alpha.25",
    "i": "^0.3.7",
    "plasmo": "0.75.2",
    "pnpm": "^8.6.12",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-fast-marquee": "^1.6.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.14.0",
    "redux": "^4.2.1",
    "redux-persist-webextension-storage": "^1.0.2",
    "styled-components": "^6.0.3",
    "usehooks-ts": "^2.9.1",
    "uuid": "^9.0.0",
    "waait": "^1.0.5"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@types/chrome": "0.0.244",
    "@types/node": "18.15.12",
    "@types/react": "18.0.37",
    "@types/react-beautiful-dnd": "^13.1.4",
    "@types/react-dom": "18.0.11",
    "@types/redux-persist-webextension-storage": "^1.0.0",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.2",
    "prettier": "2.8.7",
    "react-beautiful-dnd": "^13.1.1",
    "rimraf": "^5.0.1",
    "typescript": "5.0.4"
  },
  "manifest": {
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icon.png"
        ],
        "matches": [
          "https://www.synqapp.io/*"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*",
      "*://*/*",
      "<all_urls>"
    ],
    "permissions": [
      "tabs",
      "activeTab",
      "notifications"
    ],
    "externally_connectable": {
      "matches": [
        "*://music.apple.com/*",
        "*://*.spotify.com/*",
        "*://music.youtube.com/*",
        "*://music.amazon.com/*"
      ]
    }
  }
}
